{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "http://example.com/root.json",
	"type": "object",
	"title": "root",
	"required": [
		"name"
	],
	"properties": {
		"name": {
			"type": "string",
			"description": "programmatic name of the project"
		},
		"title": {
			"type": "string",
			"description": "human-readable name of the project"
		},
		"version": {
			"type": "string",
			"description": "Version of the project"
		},
		"versioning_schema": {
			"type": "string",
			"format": "uri",
			"description": "Versioning schema used for the project ``version``'s.\nMust be a valid https://versionmeta.org/[Version Meta] URI",
			"examples": [
				"SemVer.2.0.0"
			]
		},
		"description": {
			"type": "string",
			"description": "Project description, as a short (single-line) text"
		},
		"long_description_file": {
			"type": "string",
			"description": "Version of the project"
		},
		"homepage_url": {
			"type": "string",
			"description": "URL to the homepage of the project",
			"format": "url"
		},
		"documentation_url": {
			"type": "string",
			"description": "separate URL to the documentation for the project.\nBy default it equals to the value of `homepage_url` field",
			"format": "url-reference",
			"default": "1/homepage_url"
		},
		"wiki_url": {
			"type": "string",
			"description": "Version of the project",
			"format": "url"
		},
		"changelog_file": {
			"type": "string",
			"description": "Version of the project"
		},
		"changelog_url": {
			"type": "string",
			"description": "Version of the project"
		},
		"release_notes_file": {
			"type": "string",
			"description": "Version of the project"
		},
		"icon_url": {
			"type": "string",
			"description": "Version of the project"
		},
		"languages": {
			"type": "array",
			"items": {
				"type": "string",
				"pattern": "^(((en-GB-oed|i-ami|i-bnn|i-default|i-enochian|i-hak|i-klingon|i-lux|\ni-mingo|i-navajo|i-pwn|i-tao|i-tay|i-tsu|sgn-BE-FR|sgn-BE-NL|sgn-CH-DE)|(art-lojban|cel-gaulish|no-bok|no-nyn|zh-guoyu|zh-hakka|zh-min|zh-min-nan|zh-xiang))|((([A-Za-z]{2,3}(-([A-Za-z]{3}(-[A-Za-z]{3}){0,2}))?)|[A-Za-z]{4}|[A-Za-z]{5,8})(-([A-Za-z]{4}))?(-([A-Za-z]{2}|[0-9]{3}))?(-([A-Za-z0-9]{5,8}|[0-9][A-Za-z0-9]{3}))*(-([0-9A-WY-Za-wy-z](-[A-Za-z0-9]{2,8})+))*(-(x(-[A-Za-z0-9]{1,8})+))?)|(x(-[A-Za-z0-9]{1,8})+))$"
			}
		},
		"mailing_lists": {
			"type": "array",
			"description": "Version of the project",
			"items": {
				"type": "object",
				"properties": {
					"subscribe_email": {
						"type": "string",
						"format": "email"
					},
					"post_email": {
						"type": "string",
						"format": "email"
					},
					"unsubscribe_email": {
						"type": "string",
						"format": "email"
					},
					"archive_urls": {
						"type": "array",
						"items": {
							"type": "string",
							"format": "uri"
						}
					}
				}
			}
		},
		"inception_year": {
			"type": "string",
			"description": "Version of the project"
		},
		"keywords": {
			"type": "string",
			"description": "Version of the project"
		},
		"cert_chain_file": {
			"type": "string",
			"description": "Version of the project"
		},
		"cert_chain_url": {
			"type": "string",
			"description": "Version of the project"
		}
	}
}
